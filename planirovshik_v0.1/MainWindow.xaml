<Window x:Class="planirovshik_v0._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Планировщик задач" MinHeight="450" MinWidth="800"
        ResizeMode="CanResizeWithGrip"
        Background="#FFF9F9F9">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 8">
            <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="0 0 4 0"/>
            <ComboBox x:Name="StatusFilterCombo"
                      Width="140" Margin="0 0 16 0"
                      SelectionChanged="StatusFilterCombo_SelectionChanged"/>

            <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="0 0 4 0"/>
            <ComboBox x:Name="SortCombo"
                      Width="200"
                      SelectionChanged="SortCombo_SelectionChanged">
                <ComboBoxItem Content="Без сортировки" Tag="None" IsSelected="True"/>
                <ComboBoxItem Content="По дате (раньше → позже)" Tag="Date"/>
                <ComboBoxItem Content="По приоритету (высокий → низкий)" Tag="Priority"/>
            </ComboBox>
        </StackPanel>

        <ListView x:Name="TaskList"
                  Grid.Row="1"
                  Margin="0 0 0 8"
                  SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Заголовок" Width="220" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Описание" Width="260" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Срок" Width="110" DisplayMemberBinding="{Binding DueDate, StringFormat=d}"/>
                    <GridViewColumn Header="Приоритет" Width="90" DisplayMemberBinding="{Binding Priority}"/>
                    <GridViewColumn Header="Статус" Width="110" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 8 0 0">
            <Button Content="Добавить"
                    Width="90" Margin="0 0 6 0"
                    Click="AddButton_Click"/>
            <Button Content="Редактировать"
                    Width="100" Margin="0 0 6 0"
                    Click="EditButton_Click"/>
            <Button Content="Удалить"
                    Width="80" Margin="0 0 18 0"
                    Click="DeleteButton_Click"/>

            <Button Content="Выполнено"
                    Width="95" Margin="0 0 6 0"
                    Click="DoneButton_Click"/>
            <Button Content="Отложить"
                    Width="90"
                    Click="PostponeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
