<Window x:Class="planirovshik_v0._1.TaskEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование задачи"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        MinWidth="420"
        MinHeight="280">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Заголовок:" Margin="0 0 0 4"/>
        <TextBox x:Name="TitleTextBox"
                 Grid.Row="1"
                 MinWidth="360"
                 Margin="0 0 0 8"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0 0 0 8">
            <StackPanel Margin="0 0 16 0">
                <TextBlock Text="Срок выполнения:" Margin="0 0 0 4"/>
                <DatePicker x:Name="DueDatePicker" Width="150"/>
            </StackPanel>

            <StackPanel Margin="0 0 16 0">
                <TextBlock Text="Приоритет:" Margin="0 0 0 4"/>
                <ComboBox x:Name="PriorityComboBox"
                          Width="130">
                    <ComboBoxItem Content="Low"/>
                    <ComboBoxItem Content="Medium"/>
                    <ComboBoxItem Content="High"/>
                </ComboBox>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Статус:" Margin="0 0 0 4"/>
                <ComboBox x:Name="StatusComboBox"
                          Width="130">
                    <ComboBoxItem Content="Planned"/>
                    <ComboBoxItem Content="InProgress"/>
                    <ComboBoxItem Content="Done"/>
                    <ComboBoxItem Content="Postponed"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="3"
                   Text="Описание:"
                   Margin="0 0 0 4"/>
        <TextBox x:Name="DescriptionTextBox"
                 Grid.Row="3"
                 Grid.RowSpan="1"
                 Margin="0 20 0 0"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 MinHeight="80"
                 TextWrapping="Wrap"/>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0">
            <Button x:Name="OkButton"
                    Content="Сохранить"
                    Width="90"
                    Margin="0 0 8 0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Content="Отмена"
                    Width="80"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
